@model List<Department>
@{
    Layout = "_AdminLayout";
}
<div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Departments</h5>
                        <a asp-controller="Department" asp-action="CreateDepartment" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped mb-0">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Department Id</th>
                                        <th>Department Name</th>
                                        <th>Description</th>
                                        <th style="width: 90px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var dpss in Model){
                                        <tr>
                                        <td>@dpss.Id</td>
                                        <td>@dpss.DepartmentName</td>
                                        <td>@dpss.DepartmentDescription</td>
                                        <td>
                                            <a asp-controller="Department" asp-action="EditDepartment" asp-route-id="@dpss.Id" class="btn btn-primary btn-sm">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </a>
                                            <a asp-controller="Department" asp-action="DeleteDepartment" asp-route-id="@dpss.Id" class="btn btn-danger btn-sm">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>   
                                    }      
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>