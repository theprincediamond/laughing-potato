@model Department
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <p>
            @Model.DepartmentName is going to be deleted.
        </p>
        <form asp-controller="Department" asp-action="DeleteDepartmentConfirm" method="post">
            <input type="hidden" name="id" value="@Model.Id">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-primary" asp-controller="Department" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>