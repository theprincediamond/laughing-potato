@model DepartmentEditModel
@{
    Layout = "_AdminLayout";
}
<div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Edit Department</h5>
                        <a asp-controller="Department" asp-action="Index" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-list"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form asp-action="EditDepartment" asp-controller="Department" asp-route-id="@Model.Id" method="post">
                            <input type="hidden" asp-for="Id">
                            <div class="row mb-3">
                                <label asp-for="DepartmentName" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="DepartmentName" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="DepartmentDescription" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="DepartmentDescription" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>