@model itec420.Models.Appointment
@{
    Layout = "_Layout";
}

<h2>Delete Appointment</h2>

<div class="alert alert-danger">
    <p>Are you sure you want to delete this appointment?</p>
</div>

<dl class="row">
    <dt class="col-sm-3">Doctor</dt>
    <dd class="col-sm-9">@Model.Doctor.DoctorName</dd>

    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.AppointmentDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Time</dt>
    <dd class="col-sm-9">@Model.Time</dd>
</dl>

<form asp-controller="Appointment" asp-action="DeleteAppointment" asp-route-id="@Model.AppointmentId" method="post">
    <input type="hidden" asp-for="AppointmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Appointment" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
