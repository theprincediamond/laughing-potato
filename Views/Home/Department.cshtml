@model List<Department>
@{
    Layout = "_Layout";
}
<style>
.card-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  justify-content: flex-start;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 30%;
  margin-bottom: 16px;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 4px 12px;
}
</style>

<div class="card-container">
@foreach(var item in Model){
    <div class="card">
        <div class="container">
            <h4><b>@item.DepartmentName</b></h4> 
            <p>@item.DepartmentDescription</p> 
        </div>
    </div>
}
</div>